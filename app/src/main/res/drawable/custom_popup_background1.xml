<!-- res/drawable/custom_popup_background.xml -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Arrow at the top -->
    <item
        android:width="50dp"
        android:height="11dp"
        android:left="3dp"
        android:top="4dp">
        <shape>
            <gradient
                android:startColor="#D83945"
                android:endColor="#F9700C"/>
            <corners
                android:radius="2dp"/>
        </shape>
    </item>

    <!-- Triangle arrow -->
    <item
        android:width="2dp"
        android:height="2dp"
        android:left="3dp"
        android:top="4dp"
        android:translateY="-4">
        <rotate
            android:fromDegrees="45"
            android:pivotX="0"
            android:pivotY="0">
            <shape>
                <solid android:color="#D83945"/>
            </shape>
        </rotate>
    </item>

</layer-list>
