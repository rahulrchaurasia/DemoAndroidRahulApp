<?xml version="1.0" encoding="utf-8"?>
    <selector xmlns:android="http://schemas.android.com/apk/res/android">
        <item android:state_pressed="true">
            <shape android:shape="rectangle">
                <solid android:color="@android:color/transparent" />
                <stroke
                    android:width="2dp"
                    android:color="@color/yellow" /> <!-- Change this to your desired pressed color -->
            </shape>
        </item>

        <item>
            <shape android:shape="rectangle">
                <solid android:color="@android:color/transparent" />
                <stroke
                    android:width="0dp"
                    android:color="@color/fullTransparent" /> <!-- Change this to your desired default color -->
            </shape>
        </item>
    </selector>
