<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    xmlns:app="http://schemas.android.com/apk/res-auto"
     android:layout_marginHorizontal="@dimen/four"
    android:padding="@dimen/eight"
    tools:context=".UI.NavigationComponent.advanceDemo.ConfirmDialogFragment">

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Confirm"
        style="@style/header_textview_24"
        android:layout_marginTop="@dimen/_40dp"

       app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        />

    <TextView
        android:id="@+id/tv_message"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Do you want the end this money??"
        style="@style/regular_primary_14"
        android:layout_marginTop="@dimen/fab_margin"

        app:layout_constraintTop_toBottomOf="@+id/tv_title"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        />

    <Button
        android:id="@+id/btnYes"
        android:text="Yes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        style="@style/outlined_button"
        app:layout_constraintTop_toBottomOf="@+id/tv_message"
        />

    <Button
        android:id="@+id/btnNo"
        android:text="No"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/fab_margin"
        app:layout_constraintEnd_toStartOf="@+id/btnYes"
         style="@style/solid_button"
        app:layout_constraintTop_toBottomOf="@+id/tv_message"
        />
</androidx.constraintlayout.widget.ConstraintLayout>