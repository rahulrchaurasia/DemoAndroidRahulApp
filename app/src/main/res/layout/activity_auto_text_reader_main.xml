<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UI.TextScanner.AutoTextReaderMainActivity">


    <!-- Camera Preview -->
    <androidx.camera.view.PreviewView
        android:id="@+id/cameraPreview"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <!-- White Oval Rectangle to Display Detected Text -->
    <TextView
        android:id="@+id/ovalTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
       android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/_80dp"
        android:background="@drawable/white_oval_background"
        android:padding="16dp"
        android:text="Detected Text"
        android:textColor="@android:color/black"
        android:textSize="18sp"
        android:visibility="visible" />

    <!-- Rectangle Overlay for Text Detection -->
    <View
        android:id="@+id/rectangleOverlay"
        android:layout_width="300dp"
        android:layout_height="100dp"
        android:layout_centerInParent="true"
        android:background="@drawable/rectangle_overlay_background" />



</RelativeLayout>

