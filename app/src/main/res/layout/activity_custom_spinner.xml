<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UI.CustomSpinner.CustomSpinnerActivity">


    <com.policyboss.demoandroidapp.Utility.CustomSpinner

        android:id="@+id/spLoginVia"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:dropDownWidth="match_parent"
        android:layout_centerInParent="true"
        android:layout_marginTop="18dp"

        android:spinnerMode="dropdown"
        android:dropDownVerticalOffset="50dp"
        android:contentDescription="Select an option"
        android:layout_margin="0dp"
        android:popupBackground="@drawable/rect_spinner"
        android:background="@drawable/bg_spinner_down"
        />

</androidx.constraintlayout.widget.ConstraintLayout>