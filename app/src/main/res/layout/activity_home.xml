<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context=".UI.HomeActivity">



    <TextView
        android:id="@+id/txtReceiver"
        android:text="Home"
        android:textSize="24sp"
        android:fontFamily="@font/inter_bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"

        android:layout_marginTop="@dimen/twenty_four"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtReceiver"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="@dimen/_40dp"
       >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/childparent"
            android:layout_marginTop="@dimen/_3dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/twenty_four">
<!--            app:layout_constraintTop_toBottomOf="@+id/txtReceiver"-->
<!--            app:layout_constraintStart_toStartOf="parent"-->

<!--            android:layout_marginHorizontal="@dimen/twenty_four"-->
<!--            app:layout_constraintEnd_toEndOf="parent"-->
<!--            android:layout_width="0dp"-->
<!--            android:layout_height="wrap_content"-->


            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnDashBoard"
                app:layout_constraintTop_toTopOf="@+id/childparent"
                app:layout_constraintStart_toStartOf="@+id/childparent"
                app:layout_constraintEnd_toEndOf="@+id/childparent"
                android:text="DashBoard"
                style="@style/outlined_button"
                android:textColor="@color/Brown"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnAutoComplete"
                app:layout_constraintTop_toBottomOf="@+id/btnDashBoard"
                app:layout_constraintStart_toStartOf="@+id/childparent"
                app:layout_constraintEnd_toEndOf="@+id/childparent"
                android:text="Auticomplete DropDown"
                style="@style/outlined_button"
                android:textColor="@color/Brown"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnAPI"
                app:layout_constraintTop_toBottomOf="@+id/btnAutoComplete"
                app:layout_constraintStart_toStartOf="@+id/childparent"
                app:layout_constraintEnd_toEndOf="@+id/childparent"
                android:text="Download PDF and Share"
                style="@style/outlined_button"
                android:textColor="@color/Brown"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>



            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnShare"
                app:layout_constraintTop_toBottomOf="@+id/btnAPI"
                app:layout_constraintStart_toStartOf="@+id/childparent"
                app:layout_constraintEnd_toEndOf="@+id/childparent"
                android:text="Share Image Demo"
                style="@style/outlined_button"
                android:textColor="@color/Brown"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>


            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnShareViewModel"
                app:layout_constraintTop_toBottomOf="@+id/btnShare"
                app:layout_constraintStart_toStartOf="@+id/childparent"
                app:layout_constraintEnd_toEndOf="@+id/childparent"
                android:text="Share View Model"
                style="@style/outlined_button"
                android:textColor="@color/Brown"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnHilt"
                app:layout_constraintTop_toBottomOf="@+id/btnShareViewModel"
                app:layout_constraintStart_toStartOf="@+id/childparent"
                app:layout_constraintEnd_toEndOf="@+id/childparent"
                android:text="Hilt Basic"
                style="@style/outlined_button"
                android:textColor="@color/Brown"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnNavComp"
                app:layout_constraintTop_toBottomOf="@+id/btnHilt"
                app:layout_constraintStart_toStartOf="@+id/childparent"
                app:layout_constraintEnd_toEndOf="@+id/childparent"
                android:text="Navigation Component"

                android:textColor="@color/Brown"
                style="@style/outlined_button"
                android:layout_marginTop="@dimen/eight"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnCoroutine"
                app:layout_constraintTop_toBottomOf="@+id/btnNavComp"
                app:layout_constraintStart_toStartOf="@+id/childparent"
                app:layout_constraintEnd_toEndOf="@+id/childparent"
                android:text="Coroutine Demo"

                style="@style/solid_button"

                android:textColor="@color/white"
                android:layout_marginTop="@dimen/eight"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnFlow"
                app:layout_constraintTop_toBottomOf="@+id/btnCoroutine"
                app:layout_constraintStart_toStartOf="@+id/childparent"
                app:layout_constraintEnd_toEndOf="@+id/childparent"
                android:text="Flow Demo"

                style="@style/ButtonBlue"

                android:textColor="@color/white"
                android:layout_marginTop="@dimen/eight"
                android:layout_width="0dp"
                android:minHeight="48dp"
                android:layout_height="wrap_content"/>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnDesignPattern"
                android:layout_marginTop="@dimen/eight"
                app:layout_constraintTop_toBottomOf="@+id/btnFlow"
                app:layout_constraintStart_toStartOf="@+id/childparent"
                app:layout_constraintEnd_toEndOf="@+id/childparent"
                android:text="Design Pattern"
                style="@style/customGreenButton"

                android:textColor="@color/white"
                android:layout_width="0dp"
                android:layout_height="48dp"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnDeviceNo"
                android:layout_marginTop="@dimen/eight"
                app:layout_constraintTop_toBottomOf="@+id/btnDesignPattern"
                app:layout_constraintStart_toStartOf="@+id/childparent"
                app:layout_constraintEnd_toEndOf="@+id/childparent"
                android:text="Builder Pattern"
                style="@style/myCustomButton"

                android:textColor="@color/white"
                android:layout_width="0dp"
                android:layout_height="48dp"/>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnGetPhotoFromContact"
                app:layout_constraintTop_toBottomOf="@+id/btnDeviceNo"
                app:layout_constraintStart_toStartOf="@+id/childparent"
                app:layout_constraintEnd_toEndOf="@+id/childparent"
                android:text="GetPhotoFromContact"
                android:backgroundTint="@color/colorPrimaryDark"
                android:textColor="@color/white"
                android:layout_width="0dp"
                android:visibility="gone"
                android:layout_height="wrap_content"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnFileUpload"
                style="@style/outlined_button"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/eight"

                android:text="File Upload"
                android:textColor="@color/Brown"
                app:layout_constraintEnd_toEndOf="@+id/childparent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@+id/childparent"
                app:layout_constraintTop_toBottomOf="@+id/btnGetPhotoFromContact" />


            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnKotlinDemo"
                style="@style/outlined_button"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/eight"

                android:text="Kotlin Demo"
                android:textColor="@color/Brown"
                app:layout_constraintEnd_toEndOf="@+id/childparent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@+id/childparent"
                app:layout_constraintTop_toBottomOf="@+id/btnFileUpload" />

        </androidx.constraintlayout.widget.ConstraintLayout>
   </ScrollView>





</androidx.constraintlayout.widget.ConstraintLayout>